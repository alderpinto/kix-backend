<?xml version="1.0" encoding="utf-8" ?>
<kix_config version="1.0" init="Framework">
    <ConfigItem AccessLevel="internal" Name="HTMLToPDF::wkhtmltopdf" Required="0" Valid="1">
        <Description Translatable="1">Settings for 'wkhtmltopdf'</Description>
        <Group>Framework</Group>
        <SubGroup>Core::HTMLToPDF</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Binary">/usr/local/bin/wkhtmltopdf</Item>
                <Item Key="Parameter">
                    <Array>
                        <Item>-s A4</Item>
                        <Item>--images</Item>
                        <Item>--enable-internal-links</Item>
                        <Item>--enable-local-file-access</Item>
                        <Item>--print-media-type</Item>
                        <Item>--disable-smart-shrinking</Item>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>

    <ConfigItem AccessLevel="internal" Name="HTMLToPDF::Module###Ticket" Required="0" Valid="1">
        <Description Translatable="1">Module registration for configuration print.</Description>
        <Group>Framework</Group>
        <SubGroup>Core::HTMLToPDF::Module</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::HTMLToPDF::Ticket</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem AccessLevel="internal" Name="HTMLToPDF::Module###Article" Required="0" Valid="1">
        <Description Translatable="1">Module registration for configuration print.</Description>
        <Group>Framework</Group>
        <SubGroup>Core::HTMLToPDF::Module</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::HTMLToPDF::Article</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</kix_config>
